{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 29,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "x64",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja Multi-Config",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static"
            },
            "vendor": {
                "jetbrains.com/clion": {
                    "toolchain": "Visual Studio x64"
                }
            }
        },
        {
            "name": "x86",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja Multi-Config",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x86-windows-static"
            },
            "vendor": {
                "jetbrains.com/clion": {
                    "toolchain": "Visual Studio x86"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x64-debug",
            "configurePreset": "x64",
            "configuration": "Debug"
        },
        {
            "name": "x64-release",
            "configurePreset": "x64",
            "configuration": "Release"
        },
        {
            "name": "x86-debug",
            "configurePreset": "x86",
            "configuration": "Debug"
        },
        {
            "name": "x86-release",
            "configurePreset": "x86",
            "configuration": "Release"
        }
    ]
}
